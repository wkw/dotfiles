#!/usr/bin/php
<?php
/**
 * read project dir name and cd into a wordpress theme with same name
 */
$pwd = trim(`pwd`);
$dir = basename($pwd);


if( strcmp($dir,'site') === 0 ){
  //echo "getting parent\n";
  $dir = basename ( dirname($pwd) );
}

//echo "dir = $dir\n";
$path = 'wp-content/themes/' . $dir;

echo $path;
